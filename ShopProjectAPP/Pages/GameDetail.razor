@page "/gameDetail/{Id:int}"
@inherits GameDetailViewModel

@if(Game == null)
{
    <h3>Ładowanie szczegółów gry...</h3>
}
else
{
    <h3 class="mb-5">@Game.Name</h3>
    <div class="row">
        <div class="col-md-3 mb-2">
            <img class="img-fluid" src="@Game.ImageURL">
        </div>
        <div class="col-md-6">
            <h3>@Game.Name</h3>
            <p class="mb-4">@Game.Description</p>
            <p class="mb-4">
                <b>
                    @Game.Price.ToString("C")&nbsp;
                </b>
            </p>
            <div>
                <button class="btn btn-success"
                        @* @onclick="() => (AddToCart_Click(new CartItemToAddDto{
                        CartId = HardCoded.CartId,
                        ProductId = Product.Id,
                        Qty = 1
                    }))" *@>
                    <b>Dodaj do koszyka</b>
                </button>
                <button class="btn btn-danger" @onclick="NavigateToMainMenu">
                    <b>Powrót</b>
                </button>
            </div>
        </div>
    </div>
}
