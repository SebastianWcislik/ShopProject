@inherits GameViewModel

@if (Games != null)
{
    @foreach (var item in Games)
    {
        <div class="col-md-3 mb-3">
            <a href="/gameDetail/@item.Id" style="text-decoration:none; color:black; font-size: 20px">
                <div class="card">
                    <img src="@item.ImageURL">
                    <div class="card-body">
                        <h5 class="card-title mb-3">
                            @item.Name
                        </h5>
                        <p class="card-text">
                            <b>@item.Price.ToString("C")</b>
                        </p>
                    </div>
                </div>
            </a>
        </div>
    }
}

@code {
    public void SetGames(GameModel[] gm)
    {
        Games = gm;
        StateHasChanged();
    }
}